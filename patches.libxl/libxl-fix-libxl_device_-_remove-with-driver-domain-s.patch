     if (usbctrl->devid == -1) {
@@ -836,7 +836,7 @@

             GCNEW(usbctrl);
             libxl_device_usbctrl_init(usbctrl);
-            rc = libxl__device_usbctrl_setdefault(gc, domid, usbctrl);
+            rc = libxl__device_usbctrl_setdefault(gc, usbctrl, domid);
             if (rc < 0) goto out;

             if (usbctrl->devid == -1) {

