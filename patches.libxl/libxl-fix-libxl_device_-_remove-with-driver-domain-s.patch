@@ -37,8 +37,8 @@
     return ERROR_FAIL;
 }

-static int libxl__device_usbctrl_setdefault(libxl__gc *gc, uint32_t domid,
-                                            libxl_device_usbctrl *usbctrl)
+int libxl__device_usbctrl_setdefault(libxl__gc *gc, libxl_device_usbctrl *usbctrl,
